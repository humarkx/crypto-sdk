    "typings": "dist/index.d.ts",
    "files": [
      "dist"
    ],
    "repository": "https://github.com/humarkx/crypto-sdk",
    "keywords": [
      "crypto",
      "ethereum",
      "sdk"
    ],
    "scripts": {
      "lint": "tsdx lint src test",
      "build": "tsdx build",
      "watch": "tsdx watch",
      "test": "tsdx test",
      "prepublish": "tsdx build",
      "prepare": "husky install",
      "prettier": "prettier --write 'src/**/*.ts' 'test/**/*.ts'"
